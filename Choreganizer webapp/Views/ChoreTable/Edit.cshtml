@using LOGIC
@using LOGIC.Models
@model Chore

@{
    ViewBag.Title = "Edit Chore";
}

<h2>Edit Chore</h2>

<form method="post" asp-action="Add" asp-controller="ChoreTable">
    Name: 
    <input type="text" name="choreName" />
    <br/>
    Description: 
    <input type="text" name="choreDescription" />
    <br />
    Deadline date: 
    <input type="datetime" name="deadlineDate" />
    <br />
    Priority:
    <select type="number" name="Priority">
        <option value="0">--------</option>
		<option value="1">won't</option>
		<option value="2">could</option>
		<option value="3">should</option>
        <option value="4">must</option>
        </select>
        <br />
    <input type="hidden" name="choreId" value="@Model.Id" />
    <input type="submit" value="Edit Chore" />
</form>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
